<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffcc00">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="164dp">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="184dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="72dp"
                android:layout_height="match_parent">

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="IDis@youremail.com"
                        android:ems="10"
                        android:id="@+id/login_id"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:hint="password"
                        android:ems="10"
                        android:id="@+id/login_pw"
                        android:layout_marginLeft="24dp"
                        android:layout_below="@+id/login_id"
                        android:layout_centerHorizontal="true" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID기억하기"
                        android:id="@+id/Check_id"
                        android:checked="false"
                        android:layout_below="@+id/login_pw"
                        android:layout_alignStart="@+id/login_pw" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자동로그인"
                        android:id="@+id/Check_idpw"
                        android:checked="false"
                        android:layout_below="@+id/login_pw"
                        android:layout_toEndOf="@+id/Check_id" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="73dp"
                    android:text="LOGIN"
                    android:id="@+id/loginbtn"
                    android:layout_alignTop="@+id/login_id"
                    android:layout_toEndOf="@+id/login_id"
                    android:layout_alignBottom="@+id/login_pw"
                    android:layout_marginRight="20dp"
                    android:background="#ffffff"
                    android:textColor="#ffd800"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="87dp"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="209dp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="JOIN"
                        android:id="@+id/joinbtn"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="#ffffff"
                        android:textColor="#ffd800"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="10dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SKIP"
                        android:id="@+id/skipbtn"
                        android:background="#ffffff"
                        android:textColor="#ffd800"
                        android:layout_below="@+id/joinbtn"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="22dp"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>